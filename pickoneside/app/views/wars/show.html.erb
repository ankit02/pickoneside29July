
<div class="offset2 span11" style="margin-top:10px;">
	<div class='span6'>
		<div class="row-fluid">
			<div class="box-it">
				<div align="center">
					<div  id="war-settings" class="dropdown" style = "font-style:italic;">
						<div class="heading" style="display:inline !important;"> <%= @war.topic %></div>
						<% if user_signed_in? %>
							<% if @user.id == @war.user_id %> 
							 	<a class="dropdown-toggle" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="#" style="text-decoration:none;">  <i class="icon-cog"> </i> </a>  	
							 	<ul  class="dropdown-menu" role="menu" aria-labelledby="dLabel">
									<li title="Edit"><%= link_to 'Edit',edit_war_path(@war) %></li>
									<li title="Delete"><%= link_to 'Delete',war_path(@war , method: :delete, confirm: "Are you sure?") %></li>
								</ul>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<br/>
		<div class='row-fluid'>
			<div class="box-it" style="text-align:center;">
				<div class="row-fluid" id="war-pic">
					<%= image_tag @war.war_image(:original) %>
				</div>
				<div class="row-fluid">
					<h5>Views: <%= @war.hits.count %></h5>
				</div>
				<div class="row-fluid">
					<p><%= @war.description %></p>
				</div>
			</div>
			<div class="row-fluid">
				<% if user_signed_in? %>
					<br/>
					<div class="box-it">
						<%= render partial: 'comments/form' %> 
					</div><br/>
				<% end %>
			</div>
		</div>
	</div>
	<div class="span4">
		<% if user_signed_in? or @totalVotes > 0  %>
	
				<div class="row-fluid">
					<%= render partial: 'votings/form' %> 
				</div>
				<br/>
		<% end %>
		
		<% if !@war.comments.empty? %>
			<div class="box-it">
					<div class="row-fluid">
						<%= render partial: 'comment', collection: @war.comments %>
					</div>

			</div>

		<% end %>
	</div>
</div>




	