<%= render partial: 'layouts/header' %> 

<div class="offset2 span11" >

	<div class='span6'>
		<div class="row-fluid">
			<div class="box-it">
				<div align="center">
					<div  id="war-settings" class="dropdown" style = "font-style:italic;">
						<div class="heading" style="display:inline !important;"> <%= @war.topic %>
						
						<% if user_signed_in? %>
							<% if @user.id == @war.user_id or @user.username == 'admin'%> 
								<a title="Edit" href="<%= edit_war_path(@war) %>" align="right" style="position: absolute; right: 20px;"><i class="icon-pencil"></i></a>
								<a title="Delete" href="<%= war_path(@war) %>" align="right" style="position: absolute; right: 0px;" data-confirm="Are You Sure?" data-method="delete"><i class="icon-trash"></i></a>
							
							 <!-- 	<a class="dropdown-toggle" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="#" style="text-decoration:none;">  <i class="icon-cog"> </i> </a>  	
							 	<ul  class="dropdown-menu" role="menu" aria-labelledby="dLabel">
									<!-- <li title="Edit"><%#= link_to 'Edit',edit_war_path(@war) %></li> 
									<li title="Delete"><%#= link_to 'Delete',war_path(@war) , method: :delete, confirm: "Are you sure?" %></li>
								</ul>  -->
							<% end %>
						<% end %>
						
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<div class='row-fluid'>
			<div class="box-it" style="text-align:center;">
				<div class="row-fluid">
					<p class="war-description"><%= @war.description %></p>
				</div>
			</div>
			<div class="box-it" style="text-align:center;">
				<div class="row-fluid" id="war-pic">
					<%= image_tag @war.war_image(:original) %>
				</div>
				<div class="row-fluid" style="text-align:right;">
					<h5>Views:  <%= @war.hits.count %></h5>
				</div>

			</div>
			<% if not @war.options.blank? %>
			<% if user_signed_in? or @totalVotes > 0  %>
			<br/>
				<div class="box-it" id="poll-vault">
					<%= render partial: 'votings/form' %> 
				</div>
				<br/>
			<% end %>
			<% end %>

		</div>
	</div>
	<div class="span4">
		
		
		<% if !@war.comments.empty? %>
			<div class="box-it">
					<div class="row-fluid scrollme" style="max-height: 400px; overflow-y: scroll; overflow-x: hidden;">
						<%= render partial: 'comment', collection: @war.comments %>
					</div>

			</div>
			<br/>
		<% end %>
		<div class="row-fluid">
			<% if user_signed_in? %>
					
					<div class="box-it">
						<%= render partial: 'comments/form' %> 
					</div>
				<% end %>
			</div>
	</div>
</div>


